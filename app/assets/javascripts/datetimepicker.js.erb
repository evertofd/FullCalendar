document.addEventListener("turbolinks:load", function(){
  $(".modal-body").on("load", '#event_start2', function(){
    $(this).datetimepicker({
      widgetPositioning: {
        horizontal: 'auto',
        vertical: 'bottom'
      },
      icons: {
        time: 'fa fa-clock-o',
        date: 'fa fa-calendar',
        up: 'fa fa-chevron-up',
        down: 'fa fa-chevron-down',
        previous: 'fa fa-chevron-left',
        next: 'fa fa-chevron-right',
        today: 'fa fa-calendar-check-o',
        clear: 'fa fa-trash-o',
        close: 'fa fa-close'
      },
    });
  });




  //$(".content-datetimepicker").on("load", '#event_start2', function(){
  if($('#event_start2').length){
    $('#event_start2').datetimepicker({
      inline: true,
      sideBySide: true,
      keepOpen: true,
      debug:true
    });
  }

});
